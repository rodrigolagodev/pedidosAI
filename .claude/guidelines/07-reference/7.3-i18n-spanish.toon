    - id: ref-i18n-formatting
      title: Formatting
      patterns[3]:
        - id: ref-i18n-format-date
          type: Date
          example: "18 de noviembre, 2025"
          code: |
            import { format } from 'date-fns'
            import { es } from 'date-fns/locale'

            format(date, "d 'de' MMMM, yyyy", { locale: es })

        - id: ref-i18n-format-time
          type: Time
          example: "14:30"
          code: |
            format(date, 'HH:mm', { locale: es })

        - id: ref-i18n-format-number
          type: Number
          example: "1.234,56"
          code: |
            new Intl.NumberFormat('es-LA', {
              minimumFractionDigits: 0,
              maximumFractionDigits: 2,
            }).format(number)